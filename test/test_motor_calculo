import sys
import os
sys.path.append(os.path.abspath(os.path.join(os.path.dirname(__file__), '../backend')))

from plantilla_motor_calculo import CalculadoraActuarial

def test_calculo_prima_basica():
    regla = {
        "regla_id": "AUTO-PRIMA-2025-01",
        "nombre": "Cálculo de Prima Base – Autos Particular",
        "parametros": {
            "tasa_base": 0.025,
            "factor_edad": {
                "18-25": 1.15,
                "26-40": 1.00,
                "41-65": 1.10,
                "66+": 1.30
            },
            "factor_zona": {
                "CDMX": 1.20,
                "GDL": 1.10,
                "MTY": 1.15,
                "Otras": 1.00
            },
            "recargos": {
                "uso_comercial": 0.10,
                "blindado": 0.20
            },
            "descuentos": {
                "buen_conductor": 0.10,
                "multianual": 0.05
            }
        },
        "restricciones": [
            "Suma asegurada mínima: $100,000",
            "Edad máxima: 70 años",
            "Solo aplica a vehículos particulares"
        ]
    }

    entrada = {
        "suma_asegurada": 200000,
        "edad": 30,
        "zona": "CDMX",
        "uso_comercial": False,
        "blindado": False,
        "buen_conductor": True,
        "multianual": False
    }

    motor = CalculadoraActuarial([regla])
    resultado = motor.calcular_prima(entrada)
    assert abs(resultado["prima"] - 5175.0) < 0.1
