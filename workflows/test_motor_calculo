name: Test Motor de Cálculo

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Instalar Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Instalar dependencias (si aplica)
        run: |
          pip install pytest

      - name: Ejecutar pruebas automáticas
        run: |
          pytest test/

      - name: Mostrar resultado de pruebas
        if: always()
        run: cat test/report.txt || echo "No hay reporte detallado"
